<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="WelcomeController"
      alignment="CENTER"
      styleClass="welcome-screen">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="THREE CARD POKER" styleClass="title-label"/>

    <TextArea text="Welcome to Three Card Poker! Place your bets and test your luck against the dealer. Good luck!"
              wrapText="true"
              editable="false"
              maxWidth="400"
              styleClass="welcome-text"/>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Exit"
                onAction="#handleExit"
                styleClass="exit-button"/>
        <Button text="Play"
                onAction="#handleStartGame"
                styleClass="play-button"/>
    </HBox>
</VBox>